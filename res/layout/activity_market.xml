<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MarketActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:padding="@dimen/paddingGeneral" >

        <LinearLayout
            android:id="@+id/linearLayoutMarketFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingGeneral" >

            <ImageView
                android:id="@+id/imageMarketFirst"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0.3"
                android:scaleType="fitCenter"
                android:src="@drawable/list_focused_hipercompara" />

            <TextView
                android:id="@+id/textViewMarketFirst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMarketSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingGeneral" >

            <ImageView
                android:id="@+id/imageMarketSecond"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0.3"
                android:scaleType="fitCenter"
                android:src="@drawable/list_focused_hipercompara" />

            <TextView
                android:id="@+id/textViewMarketSecond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMarketThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingGeneral" >

            <ImageView
                android:id="@+id/imageMarketThird"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0.3"
                android:scaleType="fitCenter"
                android:src="@drawable/list_focused_hipercompara" />

            <TextView
                android:id="@+id/textViewMarketThird"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
 
   <fragment
       android:id="@+id/mapMarket"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:layout_weight="0"
       class="com.google.android.gms.maps.SupportMapFragment" />

</LinearLayout>